@model IEnumerable<BookConnectionMVC.Models.BookView>
@using PagedList

@{
    ViewBag.Title = "GetBooksAsync";
}

<h2>GetBooksAsync</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@{
    var hasRows = ViewBag.hasNextPage;
    var isHidden = !hasRows;

}

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
    <p>


        <button>@Html.ActionLink("Previous", "GetBooksAsync", new { pageNumber = ViewBag.PageNumber - 1 })</button>
        <button hidden="@isHidden">@Html.ActionLink("Next", "GetBooksAsync", new { pageNumber = ViewBag.PageNumber + 1 })</button>

        @ViewBag.PageNumber


       
    </p>
}
<table class="table">

    @{
        var page = @ViewBag.PageNumber == 1 ? 1 : @ViewBag.PageNumber;
    }
        <tr>
            <th>
                @Html.ActionLink("Title", "GetBooksAsync", new { pageNumber = @ViewBag.PageNumber, searchString = ViewBag.SearchString, sortBy = "title", sortOrder = ViewBag.SortOrder == "Asc" ? "Desc" : "Asc" })
            </th>
            <th>
                @Html.ActionLink("Number Of Pages", "GetBooksAsync", new { pageNumber = @ViewBag.PageNumber, searchString = ViewBag.SearchString, sortBy = "numberofpages", sortOrder = ViewBag.SortOrder == "Asc" ? "Desc" : "Asc" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfPages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id },
                    new { onclick = "return confirm('Are you sure you want to delete this?');" })

                </td>
            </tr>
        }

    </table>
